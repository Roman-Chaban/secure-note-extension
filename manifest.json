{
  "manifest_version": 3,
  "name": "Secure Note Extension",
  "description": "Save encrypted notes tied to specific domains with floating action button and popup interface.",
  "version": "1.0.0",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "minimum_chrome_version": "90",
  "action": {
    "default_title": "Secure Notes",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon/icon.png",
      "48": "icon/icon.png",
      "128": "icon/icon.png"
    }
  },
  "icons": {
    "16": "icon/icon.png",
    "48": "icon/icon.png",
    "128": "icon/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["utils.js", "styles.js", "web-components.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
